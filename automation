import internal.GlobalVariable as GlobalVariable

WebUI.openBrowser('https://taskdev.mile.app/login')

WebUI.waitForElementPresent(findTestObject('Page_Mile.app  Login/input_Back to Mile_organization'), 5)

WebUI.setText(findTestObject('Page_Mile.app  Login/input_Back to Mile_organization'), 'testonboard')

WebUI.click(findTestObject('Page_Mile.app  Login/button_Login'))

WebUI.waitForElementPresent(findTestObject('Page_1614946869128/input_Email Address or Username_email or username'), 20)

WebUI.setText(findTestObject('Page_1614946869128/input_Email Address or Username_email or username'), 'invaliduser')

WebUI.setText(findTestObject('Page_1614946869128/input_Password_password'), 'invalidpwd')

WebUI.click(findTestObject('Page_Mile.app  Login/button_Login'))

WebUI.verifyTextPresent('Login failed, please check your email or password.', false)

WebUI.closeBrowser()

